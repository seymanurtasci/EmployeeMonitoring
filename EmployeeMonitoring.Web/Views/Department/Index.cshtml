@model IEnumerable<Department>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row center">
	<div class="col-md-12">
		<div id="head-back" class="col-md-12">
			<h2 id="headline">Departmanlar</h2>
			<hr />
		</div>
		@if (TempData["message"] != null)
		{
			var message = JsonConvert.DeserializeObject<AlertMessage>(TempData["message"] as String);
			<div class="row">
				<div class="col-md-12">
					<div class="alert alert-@message.AlertType">
						@message.Message
					</div>
				</div>
			</div>
		}
		<div class="col-md-12">
			<table class="table table-hover">
				@Html.ActionLink("Yeni Ekle", "Create", "Department", null, new { @class = "btn btn-success btn-sm", @id = "btn-create" })
				<thead>
					<tr>
						<th scope="col">Departman İsmi</th>
						<th> </th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Count() == 0)
					{
						<div class="alert alert-warning">
							<h3>Departman yok</h3>
						</div>
					}
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Name</td>
							<td>
								@Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
								@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


