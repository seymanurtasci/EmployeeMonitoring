@model  Department
@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div class="row center">
		<div id="head-back" class="col-md-12">
			<h3 id="headline">Departman Güncelle</h3>
			<hr />
		</div>
		<div class="col-md-8">
			<form asp-controller="Department" asp-action="Edit" method="post">
				<input type="hidden" name="Id" value="@Model.Id" />
				<div class="form-group row">
					<label asp-for="Name" class="col-sm-3 col-form-label">Departman İsmi:</label>
					<div class="col-sm-6">
						<input class="form-control" asp-for="Name">
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-sm-6 offset-sm-3">
						<button id="btn-create" type="submit" class="btn btn-primary">Kaydet</button>
					</div>
				</div>
			</form>
		</div>
	</div>

