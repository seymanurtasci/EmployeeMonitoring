@model Employee
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row center">
	<div id="head-back" class="col-md-12">
		<h3 id="headline">Personel Ekle</h3>
		<hr />
	</div>
	<div class="col-md-8">
		<form asp-controller="Employee" asp-action="Create" method="post">
			<div class="form-group row">
				<label asp-for="Name" class="col-sm-2 col-form-label">Adı:</label>
				<div class="col-sm-6">
					<input class="form-control" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="Surname" class="col-sm-2 col-form-label">Soyadı:</label>
				<div class="col-sm-6">
					<input class="form-control" asp-for="Surname">
					<span asp-validation-for="Surname" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<label asp-for="StartDate" class="col-sm-2 col-form-label">İşe Başlama Tarihi:</label>
				<div class="col-sm-6">
					<input type="datetime" id="txtStartDate" class="form-control" asp-for="StartDate">
					<small id="emailHelp" class="form-text text-muted">gün/ay/yıl şeklinde giriniz</small>
					<span asp-validation-for="StartDate" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				@Html.LabelFor(model => model.DepartmentId, "Departman:", htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-6">
					@Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group row">
				<div class="col-sm-6 offset-sm-2">
					<button id="btn-create" type="submit" class="btn btn-primary">Kaydet</button>
				</div>
			</div>
		</form>
	</div>
</div>

